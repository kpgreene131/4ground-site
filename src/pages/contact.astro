---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact - 4ground"
  description="Get in touch for collaborations, bookings, and inquiries"
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">Get in Touch</h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Ready to collaborate, book a show, or just want to say hello? Let's connect.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div>
        <h2 class="text-2xl font-semibold text-white mb-8">Contact Options</h2>
        
        <div class="space-y-6">
          <div class="bg-gray-800 rounded-lg p-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-white">Email</h3>
                <p class="text-gray-300 text-sm mb-3">For general inquiries and collaborations</p>
                <a 
                  href="mailto:hello@4ground.xyz" 
                  class="text-blue-400 hover:text-blue-300 font-medium"
                >
                  hello@4ground.xyz
                </a>
              </div>
            </div>
          </div>

          <div class="bg-gray-800 rounded-lg p-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-white">Booking</h3>
                <p class="text-gray-300 text-sm mb-3">Live performances and DJ sets</p>
                <a 
                  href="mailto:booking@4ground.xyz" 
                  class="text-blue-400 hover:text-blue-300 font-medium"
                >
                  booking@4ground.xyz
                </a>
              </div>
            </div>
          </div>

          <div class="bg-gray-800 rounded-lg p-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-400 mt-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-white">Social</h3>
                <p class="text-gray-300 text-sm mb-3">Follow for updates and behind-the-scenes</p>
                <a 
                  href="https://twitter.com/4ground_music" 
                  class="text-blue-400 hover:text-blue-300 font-medium"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  @4ground_music
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-h2 mb-xl" style="color: var(--text-primary);">Quick Message</h2>
          
          <div class="card">
            <form style="display: flex; flex-direction: column; gap: var(--space-lg);" action="mailto:hello@4ground.xyz" method="get" enctype="text/plain">
              <div class="form-group">
                <label for="name" class="form-label">
                  Name
                </label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="form-input"
                  placeholder="Your name"
                />
              </div>

              <div class="form-group">
                <label for="email" class="form-label">
                  Email
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="form-input"
                  placeholder="your@email.com"
                />
              </div>

              <div class="form-group">
                <label for="subject" class="form-label">
                  Subject
                </label>
                <select 
                  id="subject" 
                  name="subject"
                  class="form-input form-select"
                >
                  <option>General Inquiry</option>
                  <option>Collaboration</option>
                  <option>Booking Request</option>
                  <option>Technical Support</option>
                  <option>Press/Media</option>
                </select>
              </div>

              <div class="form-group">
                <label for="message" class="form-label">
                  Message
                </label>
                <textarea 
                  id="message" 
                  name="body" 
                  rows="5"
                  class="form-input form-textarea"
                  placeholder="Tell me about your project or inquiry..."
                ></textarea>
              </div>

              <button 
                type="submit"
                class="btn btn-primary"
                style="width: 100%;"
              >
                Send Message
              </button>
            </form>

            <div class="text-center mt-lg" style="color: var(--text-tertiary); font-size: var(--text-small);">
              <p>Expect a response within 1-2 business days</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>